@using Entities
<div class="column" style="margin:10px ; min-width: 200px;max-width: 200px;">
    <a @onclick="OnRestaurant"><div class="card restaurant" style="min-height: 350px; max-height: 350px;">
            <div class="card-body">
                <h5 style="padding-bottom: 10px; color: #F95945">@Restaurant.Name</h5>
                <div class="row" style="padding-left: 10px">
                    <div class="column" style="padding-right: 15px">
                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="#F65A4B" class="bi bi-geo-alt" viewBox="0 0 16 16">
                            <path d="M12.166 8.94c-.524 1.062-1.234 2.12-1.96 3.07A31.493 31.493 0 0 1 8 14.58a31.481 31.481 0 0 1-2.206-2.57c-.726-.95-1.436-2.008-1.96-3.07C3.304 7.867 3 6.862 3 6a5 5 0 0 1 10 0c0 .862-.305 1.867-.834 2.94zM8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10z"/>
                            <path d="M8 8a2 2 0 1 1 0-4 2 2 0 0 1 0 4zm0 1a3 3 0 1 0 0-6 3 3 0 0 0 0 6z"/>
                        </svg>
                    </div>
                    <div class="column">
                        <small>@Restaurant.Address</small>                     
                    </div>
                </div>
                
                <div class="row" style="padding-left: 10px">
                    <div class="column" style="padding-right: 15px">
                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="#F65A4B" class="bi bi-telephone" viewBox="0 0 16 16">
                            <path d="M3.654 1.328a.678.678 0 0 0-1.015-.063L1.605 2.3c-.483.484-.661 1.169-.45 1.77a17.568 17.568 0 0 0 4.168 6.608 17.569 17.569 0 0 0 6.608 4.168c.601.211 1.286.033 1.77-.45l1.034-1.034a.678.678 0 0 0-.063-1.015l-2.307-1.794a.678.678 0 0 0-.58-.122l-2.19.547a1.745 1.745 0 0 1-1.657-.459L5.482 8.062a1.745 1.745 0 0 1-.46-1.657l.548-2.19a.678.678 0 0 0-.122-.58L3.654 1.328zM1.884.511a1.745 1.745 0 0 1 2.612.163L6.29 2.98c.329.423.445.974.315 1.494l-.547 2.19a.678.678 0 0 0 .178.643l2.457 2.457a.678.678 0 0 0 .644.178l2.189-.547a1.745 1.745 0 0 1 1.494.315l2.306 1.794c.829.645.905 1.87.163 2.611l-1.034 1.034c-.74.74-1.846 1.065-2.877.702a18.634 18.634 0 0 1-7.01-4.42 18.634 18.634 0 0 1-4.42-7.009c-.362-1.03-.037-2.137.703-2.877L1.885.511z"/>
                        </svg>
                    </div>
                    <div class="column">
                        <small>@Restaurant.PhoneNumber</small>                    
                    </div>
                </div>
                <div class="row" style="padding-left: 10px">
                    <div class="column" style="padding-right: 15px">
                        <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="#F65A4B" class="bi bi-bag-check" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M10.854 8.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 0 1 .708-.708L7.5 10.793l2.646-2.647a.5.5 0 0 1 .708 0z"/>
                            <path d="M8 1a2.5 2.5 0 0 1 2.5 2.5V4h-5v-.5A2.5 2.5 0 0 1 8 1zm3.5 3v-.5a3.5 3.5 0 1 0-7 0V4H1v10a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V4h-3.5zM2 5h12v9a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V5z"/>
                        </svg>
                    </div>
                    <div class="column">
                        <small>@Restaurant.DeliveryOption1.DeliveryName: @Restaurant.DeliveryOption1.Price dkk </small><br/>
                        <small>@Restaurant.DeliveryOption2.DeliveryName: @Restaurant.DeliveryOption2.Price dkk </small>
                    </div>
                </div>
                <div style="padding-bottom: 10px;">
                    <p>
                        <span style="padding-right: 5px">
                            <svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="#F65A4B" class="bi bi-card-text" viewBox="0 0 16 16">
                                <path d="M14.5 3a.5.5 0 0 1 .5.5v9a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-9a.5.5 0 0 1 .5-.5h13zm-13-1A1.5 1.5 0 0 0 0 3.5v9A1.5 1.5 0 0 0 1.5 14h13a1.5 1.5 0 0 0 1.5-1.5v-9A1.5 1.5 0 0 0 14.5 2h-13z"/>
                                <path d="M3 5.5a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9a.5.5 0 0 1-.5-.5zM3 8a.5.5 0 0 1 .5-.5h9a.5.5 0 0 1 0 1h-9A.5.5 0 0 1 3 8zm0 2.5a.5.5 0 0 1 .5-.5h6a.5.5 0 0 1 0 1h-6a.5.5 0 0 1-.5-.5z"/>
                            </svg>
                        </span>
                        <small>@Restaurant.Description</small>
                    </p>
                </div>
            </div>
        </div>
    </a>
</div>

@code {
    [Parameter]
    public Restaurant Restaurant { get; set; }
    
    [Inject]
    public NavigationManager NavigationManager { get; set; }
    
    public void OnRestaurant()
    {
        NavigationManager.NavigateTo("SRestaurant/"+Restaurant.Username);
    }
}