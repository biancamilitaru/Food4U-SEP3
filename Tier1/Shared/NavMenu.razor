            </NavLink>
        </li>
        
        <!--<AuthorizeView Policy="MustBeRestaurant">-->
            <!--<Authorized>-->
                <li class="nav-item px-3">
                    <NavLink class="nav-link" href="/MenuPage" Match="NavLinkMatch.All">
                        Menu
                    </NavLink>
                </li>
            <!--</Authorized>-->
